            android:label="@string/title_activity_upload" />
        <activity
            android:name="com.example.challengeme.Send"
            android:label="@string/title_activity_send" />
        <activity
            android:name="com.example.challengeme.PoslaniIzzivi"
            android:label="@string/title_activity_poslani_izzivi" />
